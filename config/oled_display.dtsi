/ {
    oled_display {
        compatible = "zmk,oled-display";

        animations {
            typing_effect {
                frame_delay = <100>;
                images = <&frame1>, <&frame2>, <&frame3>;
            };
        };

        layer_indicator {
            compatible = "zmk,oled-display";
            label = "Layer Indicator";
            text = "Layer: ";
            layers = <&layer_base>, <&layer_numbers>, <&layer_symbols>, <&layer_functions>;
        };

        layer_base {
            label = "Base";
        };

        layer_numbers {
            label = "Numbers";
        };

        layer_symbols {
            label = "Symbols";
        };

        layer_functions {
            label = "Functions";
        };

        bluetooth_status {
            compatible = "zmk,oled-display";
            label = "Bluetooth Status";
            states = <&bt_disconnected>, <&bt_connected>;
        };

        bt_disconnected {
            label = "BT Off";
        };

        bt_connected {
            label = "BT On";
        };

        battery_status {
            compatible = "zmk,oled-display";
            label = "Battery Status";
            format = "Battery: %d%%";
        };

        display_logo {
            compatible = "zmk,oled-display";
            label = "Display Logo";
            display_image = <&logo>;
        };
    };
};
