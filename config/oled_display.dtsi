/ {
    oled_display {
        compatible = "zmk,oled-display";

        animations {
            typing_effect {
                frame_delay = <100>;
                images = <&frame1>, <&frame2>, <&frame3>;
            };
        };

        layer_indicator {
            compatible = "zmk,oled-display";
            label = "Layer Indicator";
            text = "Layer: ";
            layers = <DEFAULT>, <NUM>, <SYM>, <FUNC>;
        };

        bluetooth_status {
            compatible = "zmk,oled-display";
            label = "Bluetooth Status";
            states = <CONNECTED>, <DISCONNECTED>;
        };

        battery_status {
            compatible = "zmk,oled-display";
            label = "Battery Status";
            format = "Battery: %d%%";
        };

        display_logo {
            compatible = "zmk,oled-display";
            label = "Display Logo";
            display_image = <&logo>;
        };
    };
};
